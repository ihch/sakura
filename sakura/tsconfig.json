{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "preserve",
    "module": "es2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "dist/types",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
